{
  "name": "arch-unit-js",
  "version": "1.0.36",
  "description": "ArchUnit clone for node.js projects",
  "files": [
    "package.json",
    "dist/index.d.ts",
    "dist/index.js",
    "dist/index.mjs",
    "LICENSE",
    "README.md"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "typing": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "pack": "npm run pack:linux:tar && npm run checksum:tar",
    "pack:linux:tar": "tar --transform='s|^|package/|' -czf arch-unit-js.tar.tgz dist/index.js dist/index.mjs dist/index.d.ts package.json LICENSE README.md",
    "pack:macos:tar": "gtar --transform='s|^|package/|' -czf arch-unit-js.tar.tgz dist/index.js dist/index.mjs dist/index.d.ts package.json LICENSE README.md",
    "checksum:tar": "sha256sum *.tgz > checksum.txt",
    "build:types": "tsc -p tsconfig.build.json --declaration --emitDeclarationOnly",
    "bundle:types": "npx rollup -c rollup.config.dts.mjs",
    "clean:types": "rm -rf dist/types",
    "build": "node esbuild.config.js && npm run build:types && npm run bundle:types && npm run clean:types",
    "test": "jest --coverage --maxWorkers=4",
    "test:watch": "jest --watch",
    "publish:beta": "npm publish --tag beta --access public",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gftf2011/arch-unit-js.git"
  },
  "author": "Gabriel Ferrari Tarallo Ferraz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gftf2011/arch-unit-js/issues"
  },
  "keywords": [
    "testing",
    "babel",
    "architecture",
    "javascript-library"
  ],
  "homepage": "https://github.com/gftf2011/arch-unit-js#readme",
  "devDependencies": {
    "@esbuild-plugins/tsconfig-paths": "0.1.2",
    "@types/babel__traverse": "7.28.0",
    "@types/jest": "^30.0.0",
    "@types/micromatch": "4.0.8",
    "@types/node": "24.0.14",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "esbuild": "0.25.8",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.0",
    "rollup": "4.46.2",
    "rollup-plugin-dts": "6.2.1",
    "ts-jest": "^29.4.0",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "@babel/parser": "7.28.0",
    "@babel/traverse": "7.28.0",
    "micromatch": "4.0.8",
    "pathe": "2.0.3"
  }
}
